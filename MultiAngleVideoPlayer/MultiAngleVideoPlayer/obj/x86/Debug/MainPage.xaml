<Page x:ConnectionId='1' x:Name="AppPage"
    x:Class="MultiAngleVideoPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MultiAngleVideoPlayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' x:Name="MainGrid" Margin="0,0,0,0">

        <Grid x:ConnectionId='3' x:Name="VersionSelectGrid" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" d:IsHidden="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='8' x:Name="V1Button" Content="Version 1 (Egocentric Choice)" Grid.Column="1" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" FontSize="24"                       />
            <Button x:ConnectionId='9' x:Name="V2Button" Content="Version 2 (Exocentric Choice)" Grid.Column="3" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" FontSize="24"                       />
        </Grid>
        <Grid x:ConnectionId='4' x:Name="ExoViewGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" d:IsHidden="True">
            <TextBlock x:ConnectionId='6' x:Name="Message" Text="Under Construction" TextWrapping="Wrap" Width="660" FontSize="72" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:ConnectionId='7' x:Name="ExoBackButton" Content="Back" HorizontalAlignment="Center" Height="96" Margin="0,553,0,0" VerticalAlignment="Top" Width="351" FontSize="36"                            />
        </Grid>
        <local:EgoView x:ConnectionId='5' x:Name="EgoViewGrid" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center"/>

    </Grid>
</Page>

