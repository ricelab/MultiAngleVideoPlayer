<Page x:ConnectionId='1' x:Name="AppPage"
    x:Class="MultiAngleVideoPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MultiAngleVideoPlayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" ExitDisplayModeOnAccessKeyInvoked="False" MaxWidth="1500">

    <Grid x:ConnectionId='2' x:Name="MainGrid" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <Grid x:ConnectionId='3' x:Name="VersionSelectGrid" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='5' x:Name="TestVersionButton" Content="Test Version" Grid.Column="1" HorizontalAlignment="Stretch" Grid.Row="2" VerticalAlignment="Stretch" FontSize="24" Margin="10,10,10,10"                                />
            <Button x:ConnectionId='6' x:Name="RealVersionButton" Content="Real Version" Grid.Column="1" HorizontalAlignment="Stretch" Grid.Row="3" VerticalAlignment="Stretch" FontSize="24" Margin="10,10,10,10"                                />
            <TextBlock x:ConnectionId='7' x:Name="ParticipantLabel" Grid.Column="1" HorizontalAlignment="Left" Margin="30,30,0,0" Grid.Row="1" Text="Participant Number:" TextWrapping="Wrap" VerticalAlignment="Top" Height="44" Width="215" FontSize="24"/>
            <TextBox x:ConnectionId='8' x:Name="ParticipantBox" Grid.Column="1" HorizontalAlignment="Right" Height="42" Margin="0,30,30,0" Grid.Row="1" Text="" VerticalAlignment="Top" Width="181"/>
        </Grid>
        <local:EgoView x:ConnectionId='4' x:Name="EgoViewGrid" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" d:IsHidden="True"/>
    </Grid>
</Page>

