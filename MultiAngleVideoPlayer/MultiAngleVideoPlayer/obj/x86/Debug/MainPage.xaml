<Page x:ConnectionId='1' x:Name="AppPage"
    x:Class="MultiAngleVideoPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MultiAngleVideoPlayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' x:Name="MainGrid" Margin="0,0,0,0">

        <Grid x:ConnectionId='3' x:Name="VersionSelectGrid" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" d:IsHidden="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='25' x:Name="V1Button" Content="Version 1 (Egocentric Choice)" Grid.Column="1" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" FontSize="24"                       />
            <Button x:ConnectionId='26' x:Name="V2Button" Content="Version 2 (Exocentric Choice)" Grid.Column="3" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" FontSize="24"                       />
        </Grid>
        <Grid x:ConnectionId='4' x:Name="EgoViewGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid x:ConnectionId='8' x:Name="AngleSelectGrid" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.RowSpan="3" Height="996" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <MediaElement x:ConnectionId='14' x:Name="AngleChoice0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="201" AutoPlay="False"                             ManipulationMode="All"                                      />
                <MediaElement x:ConnectionId='15' x:Name="AngleChoice1" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" AutoPlay="False"                             ManipulationMode="All"                                      />
                <MediaElement x:ConnectionId='16' x:Name="AngleChoice2" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" AutoPlay="False"                             ManipulationMode="All"                                      />
                <MediaElement x:ConnectionId='17' x:Name="AngleChoice3" HorizontalAlignment="Stretch" Grid.Row="3" VerticalAlignment="Stretch" AutoPlay="False"                             ManipulationMode="All"                                      />
                <MediaElement x:ConnectionId='18' x:Name="AngleChoice4" HorizontalAlignment="Stretch" Grid.Row="4" VerticalAlignment="Stretch" AutoPlay="False"                             ManipulationMode="All"                                      />
                <Canvas x:ConnectionId='19' x:Name="Borders" HorizontalAlignment="Stretch" Margin="0,0,0,-0.001" Grid.RowSpan="5" VerticalAlignment="Stretch">
                    <Border x:ConnectionId='20' x:Name="Border0" BorderBrush="Black" BorderThickness="1,1,1,1" HorizontalAlignment="Stretch" Height="199" VerticalAlignment="Stretch" Width="375" />
                    <Border x:ConnectionId='21' x:Name="Border1" BorderBrush="Black" BorderThickness="1,1,1,1" HorizontalAlignment="Stretch" Height="199" Canvas.Top="199" VerticalAlignment="Stretch" Width="375" />
                    <Border x:ConnectionId='22' x:Name="Border2" BorderBrush="Black" BorderThickness="1,1,1,1" HorizontalAlignment="Stretch" Height="199" Canvas.Top="399" VerticalAlignment="Stretch" Width="375" />
                    <Border x:ConnectionId='23' x:Name="Border3" BorderBrush="Black" BorderThickness="1,1,1,1" HorizontalAlignment="Stretch" Height="199" Canvas.Top="598" VerticalAlignment="Stretch" Width="375" />
                    <Border x:ConnectionId='24' x:Name="Border4" BorderBrush="Black" BorderThickness="1,1,1,1" HorizontalAlignment="Stretch" Height="199" Canvas.Top="797" VerticalAlignment="Stretch" Width="375" />
                </Canvas>
            </Grid>
            <TextBlock x:ConnectionId='9' x:Name="NoVidMessage" Grid.Column="1" HorizontalAlignment="Center" Height="57" Grid.Row="1" Text="Select a video angle to being viewing." TextWrapping="Wrap" VerticalAlignment="Center" Width="623" TextAlignment="Center" FontSize="36"/>
            <MediaElement x:ConnectionId='10' x:Name="CurrentVideo" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.RowSpan="2" Grid.ColumnSpan="2"                                       />
            <Button x:ConnectionId='11' x:Name="EgoBackButton" Content="Back" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="22"                            />
            <TextBlock x:ConnectionId='12' x:Name="VidControlMessage" Grid.Column="1" HorizontalAlignment="Left" Height="36" Margin="274.667,23.667,0,0" Grid.Row="2" Text="Other video controls will go down here" TextWrapping="Wrap" VerticalAlignment="Top" Width="355" FontSize="20"/>
            <Button x:ConnectionId='13' x:Name="PlayPauseButton" Content="Play" HorizontalAlignment="Stretch" Grid.Row="2" VerticalAlignment="Stretch" FontSize="20"                              />
        </Grid>
        <Grid x:ConnectionId='5' x:Name="ExoViewGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" d:IsHidden="True">
            <TextBlock x:ConnectionId='6' x:Name="Message" Text="Under Construction" TextWrapping="Wrap" Width="660" FontSize="72" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:ConnectionId='7' x:Name="ExoBackButton" Content="Back" HorizontalAlignment="Center" Height="96" Margin="0,553,0,0" VerticalAlignment="Top" Width="351" FontSize="36"                            />
        </Grid>
    </Grid>
</Page>

