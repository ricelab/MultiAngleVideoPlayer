<UserControl
    x:Class="MultiAngleVideoPlayer.CameraControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MultiAngleVideoPlayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" Width="18" Height="41">

    <Canvas x:ConnectionId='2' x:Name="CameraIcon" HorizontalAlignment="Center" Height="41" Grid.Row="2" VerticalAlignment="Center" Grid.Column="1" Width="18">
        <Rectangle HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="18" Fill="#FF3C3838" Canvas.Top="11"/>
        <Rectangle HorizontalAlignment="Left" Height="5" VerticalAlignment="Top" Width="8" Fill="#FF3C3838" Canvas.Left="5" Canvas.Top="6"/>
        <Path Data="M0,0 L0,0" Height="10" Canvas.Left="8" Stretch="Fill" UseLayoutRounding="False" Width="9" Stroke="#FF3C3838"/>
        <Path Data="M0,0 L0,0" Height="8.74" Canvas.Left="8.625" Stretch="Fill" UseLayoutRounding="False" Width="1.12" Stroke="#FF3C3838" RenderTransformOrigin="0.5,0.5" Canvas.Top="-0.745" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Path.RenderTransform>
                <CompositeTransform Rotation="0.374"/>
            </Path.RenderTransform>
        </Path>
        <Path Data="M0,0 L0,0" Height="8" Canvas.Left="1" Stretch="Fill" UseLayoutRounding="False" Width="7" Stroke="#FF3C3838" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Canvas>
</UserControl>

